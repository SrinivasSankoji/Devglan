server:
  port: ${PORT:0}
  
spring:
  application:
    name: gateway-service
  cloud:
    gateway:
      routes:
      - id: gateway-first-service
        uri:
          lb://GATEWAY-FIRST-SERVICE
        predicates:
        - PATH=/api/v1/first/**
        filters:
        - RewritePath=/api/v1/first/(?.*), /$\{remains}
        - AddRequestHeader=X-first-Header, first-service-header
        -name: Hystrix
              args:
                name:hystrix
    
eureka:
  instance:
    instance-id: ${spring.application.name}:${spring.application.instance_id}:${random.value} 
    
management:
  endpoints:
    web:
      exposure:
        include:
        - hystrix.stream
    
    
            